body
	font-family "Proxima Nova"

.dot
	width 200px
	height 200px
	border-radius 100px
	background red
	&.active
		background green

.menu
	position fixed
	bottom 0
	height 12vh
	width 100vw
	ul
		padding 0
		list-style none
		display flex
		flex-direction row
		li
			flex 1
			a
				text-decoration none
				color black
				text-align center
				img
					width 5vw
				img, span
					margin 0 auto
					display block



				span
					width 100%
					text-align center
					font-size 3vw

			iconfactor = 0.5
			.icon-wrapper
				height 10vw
			&:nth-child(1)
				a img
					//18px
					width 18 * iconfactor vw
			&:nth-child(2)
				a img
					//18px
					width 18 * iconfactor vw
			&:nth-child(3)
				a img
					//10px
					width 10 * iconfactor vw
			&:nth-child(4)
				a img
					//14px
					width 14 * iconfactor vw

